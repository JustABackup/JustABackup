@model JustABackup.Models.CreateJobModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>CreateJobModel</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BackupProvider" class="control-label"></label>
                <select asp-for="BackupProvider" asp-items="Model.BackupProviders" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="StorageProvider" class="control-label"></label>
                <select asp-for="StorageProvider" asp-items="Model.StorageProviders" class="form-control"></select>
            </div>
            <div>
                <label asp-for="CronSchedule">Schedule</label>
                <input class="cron-selector" type="hidden" asp-for="CronSchedule" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

