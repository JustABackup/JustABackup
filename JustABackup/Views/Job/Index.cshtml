@model ListJobsModel

<div class="text-right">
    <a asp-action="Create" class="btn btn-success">Create</a>
    <a asp-action="Pause" class="btn btn-warning">Pause</a>
    <a asp-action="Pause" class="btn btn-warning">Start</a>
</div>

<table class="table table-responsive table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th>Name</th>
            <th>Backup provider</th>
            <th>Storage provider</th>
            <th>Next run</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model.Jobs)
        {
            <tr>
                <td>@job.Name</td>
                <td>@job.BackupProvider</td>
                <td>@job.StorageProvider</td>
                <td>@job.NextRun</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>