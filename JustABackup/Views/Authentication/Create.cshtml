@model CreateAuthenticatedSessionModel

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthenticationProvider" class="control-label"></label>
                <select asp-for="AuthenticationProvider" asp-items="Model.AuthenticationProviders" class="form-control"></select>
            </div>
            <div class="form-group text-right">
                <input type="submit" value="Continue" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
