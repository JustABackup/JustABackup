@model JustABackup.Models.ListJobHistoryModel

@{
    ViewData["Title"] = "Latest runs";
}

<h1>Latest runs</h1>

<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Started</th>
            <th>Run time</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var job in Model.JobHistory)
        {
            <tr>
                <td>@job.JobName</td>
                <td>@job.Started</td>
                <td>@job.RunTime</td>
                <td>@job.Status</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>