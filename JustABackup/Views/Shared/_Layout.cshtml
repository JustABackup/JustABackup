                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </aside>
            <div class="sidebar-overlay" id="sidebar-overlay"></div>
            <div class="sidebar-mobile-menu-handle" id="sidebar-mobile-menu-handle"></div>
            <div class="mobile-menu-handle"></div>

            <article class="content">
                <div class="title-block">
                    <h1 class="title">@Model.Title</h1>
                    @if (!string.IsNullOrWhiteSpace(Model.TitleDescription))
                    {
                        <p class="title-description">@Model.TitleDescription</p>
                    }
                </div>

                @RenderBody()
            </article>

            <footer class="footer">
                <div class="footer-block text-center w-100">
                    <a href="https://github.com/JustABackup/JustABackup" target="_blank" rel="noreferrer">Just A Backup</a> &copy; @DateTime.Now.Year
                </div>
            </footer>
        </div>
    </div>

    <script src="~/js/vendor.js"></script>
    <script src="~/js/app.js"></script>
